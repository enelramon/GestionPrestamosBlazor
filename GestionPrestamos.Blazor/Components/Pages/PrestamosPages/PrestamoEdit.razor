@page "/Prestamo/Edit/{PrestamoId:int}"

@inject PrestamosService prestamosService
@inject DeudoresService deudoresService
@inject ToastService toastService
@inject NavigationManager navigationManager
@inject HttpClient httpClient

<PageTitle>Modificar Préstamo</PageTitle>

<EditForm Model="Prestamo" OnValidSubmit="Modificar">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="container">
        <div class="card shadow-lg">
            <div class="card-header text-center">
                <h5 class="card-title">Modificar Préstamo</h5>
            </div>

            <div class="card-body">
                @* Deudor *@
                <div class="mb-3">
                    <label class="form-label"><strong>Deudor</strong></label>
                    <InputSelect class="form-control" @bind-Value="Prestamo.DeudorId">
                        <option value="0" disabled>Seleccione un deudor</option>
                        @foreach (var deudor in ListaDeudores)
                        {
                            <option value="@deudor.DeudorId">@deudor.Nombres</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="(() => Prestamo.DeudorId)" />
                </div>

                @* Concepto *@
                <div class="mb-3">
                    <label class="form-label"><strong>Concepto</strong></label>
                    <InputText class="form-control" @bind-Value="Prestamo.Concepto"></InputText>
                    <ValidationMessage For="(() => Prestamo.Concepto)" />
                </div>

                @* Monto *@
                <div class="mb-3">
                    <label class="form-label"><strong>Monto</strong></label>
                    <InputNumber class="form-control" @bind-Value="Prestamo.Monto"></InputNumber>
                    <ValidationMessage For="(() => Prestamo.Monto)" />
                </div>

                @* Detalles de cuotas *@
                <div class="mt-3" style="display: @(PrestamoDetalles.Any() ? "block" : "none")">
                    <h5>Detalles de Cuotas</h5>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Cuota No.</th>
                                <th>Fecha</th>
                                <th>Valor</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cuota in PrestamoDetalles)
                            {
                                <tr>
                                    <td>@cuota.CuotaNo</td>
                                    <td><InputDate class="form-control" @bind-Value="cuota.Fecha"></InputDate></td>
                                    <td><InputNumber class="form-control" @bind-Value="cuota.Valor"></InputNumber></td>
                                    <td>
                                        <button type="button" class="btn btn-danger" @onclick="() => EliminarCuota(cuota)">Eliminar</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            @* Footer *@
            <div class="card-footer text-center mt-2">
                <a href="/Prestamo/Index" class="btn btn-secondary">
                    <span class="bi bi-arrow-left"></span> Volver
                </a>
                <button type="submit" class="btn btn-primary bi bi-floppy"> Modificar</button>
                <button type="button" class="btn btn-danger bi bi-trash" @onclick="Eliminar"> Eliminar</button>
            </div>
        </div>
    </div>
</EditForm>

@code {
    [Parameter]
    public int PrestamoId { get; set; }

    public Prestamos Prestamo { get; set; } = new Prestamos();
    public List<Deudores> ListaDeudores { get; set; } = new List<Deudores>();
    public List<PrestamosDetalle> PrestamoDetalles { get; set; } = new List<PrestamosDetalle>();

    protected override async Task OnInitializedAsync()
    {
        Prestamo = await prestamosService.Buscar(PrestamoId);
        ListaDeudores = await deudoresService.Listar(d => d.DeudorId > 0);

        // Cargar los detalles del préstamo
        var detallesResponse = await httpClient.GetFromJsonAsync<List<PrestamosDetalle>>($"api/PrestamosDetalles/{PrestamoId}");
        if (detallesResponse != null)
        {
            PrestamoDetalles = detallesResponse;
        }
    }

    public async Task Modificar()
    {
        var modificado = await prestamosService.Guardar(Prestamo);
        if (!modificado)
        {
            toastService.ShowError("No se ha podido modificar el préstamo.");
            return;
        }

        foreach (var cuota in PrestamoDetalles)
        {
            await httpClient.PutAsJsonAsync($"api/PrestamosDetalles/{cuota.Id}", cuota);
        }

        toastService.ShowSuccess("Préstamo modificado correctamente.");
        navigationManager.NavigateTo("/Prestamo/Index");
    }

    private async Task Eliminar()
    {
        var eliminado = await prestamosService.Eliminar(Prestamo.PrestamoId);
        if (eliminado)
        {
            toastService.ShowSuccess("Préstamo eliminado correctamente.");
            navigationManager.NavigateTo("/Prestamo/Index");
        }
        else
        {
            toastService.ShowError("No se ha podido eliminar el préstamo.");
        }
    }

    public void EliminarCuota(PrestamosDetalle cuota)
    {
        PrestamoDetalles.Remove(cuota);
    }
}
