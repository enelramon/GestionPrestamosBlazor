@page "/Prestamo/Index"

@inject PrestamosService prestamosService
@inject HttpClient httpClient
@inject NavigationManager navigationManager

<PageTitle>Registro de Préstamos</PageTitle>

<div class="container">
    <div class="card shadow-lg">
        <div class="card-header space-between">
            <h5 class="card-title">Registro de Préstamos</h5>
            <a href="/Prestamo/Create" class="btn btn-primary">
                <span class="bi bi-plus-square mt-3"></span> Crear
            </a>
        </div>

        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>PrestamoId</th>
                        <th>Deudor</th>
                        <th>Concepto</th>
                        <th>Monto</th>
                        <th>Número de Cuotas</th>
                        <th>Balance</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var prestamo in ListaPrestamos)
                    {
                        var numeroCuotas = CuotasPorPrestamo.ContainsKey(prestamo.PrestamoId) ? CuotasPorPrestamo[prestamo.PrestamoId] : 0;
                        <tr>
                            <td>@prestamo.PrestamoId</td>
                            <td>@prestamo.Deudor.Nombres</td>
                            <td>@prestamo.Concepto</td>
                            <td>@prestamo.Monto.ToString("C")</td>
                            <td>@numeroCuotas</td>
                            <td>@prestamo.Balance.ToString("C")</td>
                            <td class="text-center">
                                <a href="/Prestamo/Edit/@prestamo.PrestamoId" class="btn btn-outline-primary bi bi-pencil-square"></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="card-footer space-between">
            <label>Cantidad: @ListaPrestamos.Count()</label>
            <label>Total: @ListaPrestamos.Sum(p => p.Monto).ToString("C")</label>
        </div>
    </div>
</div>

@code {
    public List<Prestamos> ListaPrestamos { get; set; } = new();
    public Dictionary<int, int> CuotasPorPrestamo { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        await CargarPrestamos();
        await CargarCuotasPorPrestamo();
    }

    private async Task CargarPrestamos()
    {
        // Se usa PrestamosService en lugar de la API
        ListaPrestamos = await prestamosService.GetList(p => p.PrestamoId > 0);
    }

    private async Task CargarCuotasPorPrestamo()
    {
        try
        {
            var prestamosDetalles = await httpClient.GetFromJsonAsync<List<PrestamosDetalle>>("api/PrestamosDetalles");

            if (prestamosDetalles != null)
            {
                CuotasPorPrestamo = prestamosDetalles
                    .GroupBy(pd => pd.PrestamoId)
                    .ToDictionary(g => g.Key, g => g.Count()); // Se cuenta la cantidad de cuotas por préstamo
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al obtener detalles de préstamos: {ex.Message}");
        }
    }
}
